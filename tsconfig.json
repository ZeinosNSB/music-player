{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true ,
    "skipLibCheck": true ,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  },
  "files": ["src/type.d.ts"],
  "include": ["src/**/*", "src/type.d.ts"]
}